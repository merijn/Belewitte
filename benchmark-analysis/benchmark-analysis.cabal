  Build-Depends:        process-tools
               ,        conduit ^>= 1.3.4.3
               ,        conduit-extra ^>= 1.3.6
               ,        containers ^>= 0.6.6
               ,        interpolate ^>= 0.2.1
               ,        optparse-applicative ^>= 0.17
               ,        pretty-show ^>= 1.10
               --       resourcet 1.3.0 is not supported by broadcast-chan
               ,        resourcet ^>= 1.2.0
               ,        time ^>= 1.12.2
               ,        unix ^>= 2.8.1.1

  -- mtl 2.3.1 is broken on GHC 9.0 and thus never valid
  if impl(ghc == 9.0.*)
    Build-Depends:      mtl ^>= 2.2.2
  else
    Build-Depends:      mtl ^>= 2.3.1

